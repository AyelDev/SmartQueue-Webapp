<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://java.sun.com/xml/ns/javaee"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	id="WebApp_ID" version="3.0">
	<display-name>smartqueueweb</display-name>
	<welcome-file-list>
		<welcome-file>login</welcome-file>
		<welcome-file>index.html</welcome-file>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.htm</welcome-file>
		<welcome-file>default.html</welcome-file>
		<welcome-file>default.jsp</welcome-file>
		<welcome-file>default.htm</welcome-file>
	</welcome-file-list>

<!-- 
	Staff Servlet Redirection
 -->
	<servlet>
		<servlet-name>userwindow</servlet-name>
		<jsp-file>/staff/user_window.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>userwindow</servlet-name>
		<url-pattern>/userwindow</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>counterwindow</servlet-name>
		<jsp-file>/staff/counter_window.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>counterwindow</servlet-name>
		<url-pattern>/counterwindow</url-pattern>
	</servlet-mapping>

<!-- 
	Admin Servlet Redirection
 -->
	<servlet>
		<servlet-name>listofcounter</servlet-name>
		<jsp-file>/admin/list_of_counter.jsp</jsp-file>
	</servlet>
	<servlet-mapping>
		<servlet-name>listofcounter</servlet-name>
		<url-pattern>/listofcounter</url-pattern>
	</servlet-mapping>


	<session-config>
		<cookie-config>
			<path>/</path>
			<http-only>true</http-only>
			<!-- <secure>true</secure> -->
			<max-age>86400</max-age>
		</cookie-config>
	</session-config>

	<error-page>
		<error-code>503</error-code>
		<location>/errors/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>500</error-code>
		<location>/errors/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>404</error-code>
		<location>/errors/error.jsp</location>
	</error-page>
	<error-page>
		<error-code>405</error-code>
		<location>/errors/error.jsp</location>
	</error-page>
	<error-page>
		<exception-type>java.lang.Throwable</exception-type>
		<location>/errors/error.jsp</location>
	</error-page>

</web-app>